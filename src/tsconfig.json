{
  "compilerOptions": {
    "target": "ES2020",
    "module": "esnext",
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "baseUrl": ".",
    "rootDir": ".",
    "outDir": "../dist",
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "alwaysStrict": true,
    "sourceMap": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noEmit": false,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "strictNullChecks": false,
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "modules/Dungeon.ts",
    "**/*.json"
  ],
  "references": [
    { "path": "../" }
  ]
}
